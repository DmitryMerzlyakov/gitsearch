{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite-plugin-svgr/client", "vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/__test__//*.(test|spec).(ts|tsx)",
    "*.config.ts",
    "./src//*",
    "./playwright//*",
    "src/components/SearchResult/components/ResultList",
    "src/hooks/contextValue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
